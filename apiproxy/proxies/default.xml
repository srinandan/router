<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="Get Endpoint">
            <Description/>
            <Request>
                <Step>
                    <Name>Extract-Proxy-Details</Name>
                </Step>
                <Step>
                    <Name>Get-Key</Name>
                </Step>
                <Step>
                    <Name>Lookup-Endpoint</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>Return-Endpoint</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/endpoint") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/edgemicro-router</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>